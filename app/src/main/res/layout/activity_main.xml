<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tablas de Multiplicar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.069"
            android:textSize="20sp" android:id="@+id/textView"/>
    <Spinner
            android:layout_width="300dp"
            android:layout_height="wrap_content" android:id="@+id/spinnerTabla"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" app:layout_constraintTop_toTopOf="@+id/textView"
            android:layout_marginTop="64dp" app:layout_constraintHorizontal_bias="0.492"/>
    <Button
            android:text="Mostrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnMostrar"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinnerTabla" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.677" app:layout_constraintHorizontal_bias="0.498"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewTabla"
            app:layout_constraintTop_toBottomOf="@+id/spinnerTabla"
            android:layout_marginTop="60dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.498"
            android:textSize="20sp" android:textColor="#D11010"/>

</androidx.constraintlayout.widget.ConstraintLayout>